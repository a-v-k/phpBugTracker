  PRIMARY KEY  (os_id)
) ENGINE=MyISAM;


#--
# TBL_PRIORITY
CREATE TABLE TBL_PRIORITY (
  priority_id int(10) unsigned NOT NULL default '0',
  priority_name varchar(30) NOT NULL default '',
